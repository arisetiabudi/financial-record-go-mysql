pipeline {
    agent { label 'dev' }

    stages {
        stage('Pull SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/arisetiabudi/financial-record-go-mysql.git'
            }
        }
        
        stage('Build') {
            steps {
                sh'''
                cd app
                go mod tidy
                '''
            }
        }
        
        
        
        stage('Code Review') {
            steps {
                sh'''
                cd app
                sonar-scanner \
                -Dsonar.projectKey=app-ari \
                -Dsonar.sources=. \
                -Dsonar.host.url=http://172.23.10.6:9000 \
                -Dsonar.token=sqp_2a49c2650be4bc0a42ff2480aa68e696b3725dbe
                '''
            }
        }
        
        stage('Deploy') {
            steps {
                sh'''
                docker compose up --build -d
                '''
            }
        }
        
        stage('Backup') {
            steps {
                 sh 'docker compose push' 
            }
        }
    }
}